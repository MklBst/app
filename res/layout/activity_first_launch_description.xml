<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout android:id="@+id/ll"
                  android:layout_alignParentTop="true"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"/>




    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstLaunchDescription_cloud_button"
            android:layout_alignParentBottom="true"
            android:padding="50dp"
            android:gravity="right">

        <ImageButton
                android:id="@+id/firstLaunchDescription_buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick_buttonNext"
                android:text="@string/firstLaunchDescription_button_next"
                android:background="@drawable/button_cloud_next"
                android:layout_marginTop="100dp"
                />

    </LinearLayout>




    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstLaunchDescription_cloud"
            android:layout_below="@id/ll"
            android:layout_above="@id/firstLaunchDescription_cloud_button"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:scrollbarSize="5dp"
            android:background="@drawable/white_background"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb_blue"

            >

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/firstLaunchDescription_scrollviewtext"
                android:layout_alignParentBottom="true"
                android:padding="50dp"
                android:background="@drawable/white_background"
                android:gravity="right">

            <TextView
                    android:id="@+id/firstLaunchDescription_textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/firstLaunchDescription_text_title"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/ui_blue_background_color"/>

            <TextView
                    android:id="@+id/firstLaunchDescription_textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/ui_blue_background_color"/>


        </LinearLayout>


        <!--         android:background="@drawable/text_box"    -->
    </ScrollView>



