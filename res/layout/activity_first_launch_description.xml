<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    >

    <LinearLayout
            android:id="@+id/firstLaunchDescription_scrollview_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/white_background"    >

            <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:padding="15dp"
                    android:scrollbarSize="5dp"
                    android:gravity="center_horizontal"
                    android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb_blue">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstLaunchDescription_scrollviewtext"   >


            <TextView
                    android:id="@+id/firstLaunchDescription_textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="coucou"
                    android:padding="50dp"
                    android:textAppearance="@style/ui_font_title_darkblue"/>


        </LinearLayout>
        <!--         android:background="@drawable/text_box"
                                                                -->
            </ScrollView>

    </LinearLayout>

    <LinearLayout android:id="@+id/firstLaunchDescription_cloud_layout"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="-10dp"
                  android:layout_below="@id/firstLaunchDescription_scrollview_layout">


        <ImageView
                android:id="@+id/firstLaunchDescription_buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:src="@drawable/cloud_bottom"   />

    </LinearLayout>


    <RelativeLayout android:id="@+id/firstLaunchDescription_person_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:layout_alignParentBottom="true"
            >

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src = "@drawable/person_description"  />

    </RelativeLayout>


    <LinearLayout android:id="@+id/firstLaunchDescription_button_layout"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="50dp"
                  android:layout_below="@id/firstLaunchDescription_cloud_layout">

        <ImageButton
                android:id="@+id/firstLaunchDescription_buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick_buttonNext"
                android:background="@drawable/button_cloud_next"/>

    </LinearLayout>


</RelativeLayout>