<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/firstLaunchMeasures_textMeasures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/firstLaunchMeasures_text_measures"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/firstLaunchMeasures_textNetworkLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/ic_cross"
                android:gravity="center_vertical"
                android:text="@string/firstLaunchMeasures_text_network_location" />

            <TextView
                android:id="@+id/firstLaunchMeasures_textAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/ic_check"
                android:gravity="center_vertical"
                android:text="@string/firstLaunchMeasures_text_answers" />

            <TextView
                android:id="@+id/firstLaunchMeasures_textTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_check"
                android:gravity="center_vertical"
                android:text="@string/firstLaunchMeasures_text_times" />
        </LinearLayout>

        <TextView
            android:id="@+id/firstLaunchMeasures_textAnonymous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/firstLaunchMeasures_text_anonymous" />

        <TextView
            android:id="@+id/firstLaunchMeasures_textSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/firstLaunchMeasures_text_settings_necessary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" >

            <Button
                android:id="@+id/firstLaunchMeasures_buttonSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick_buttonSettings"
                android:text="@string/firstLaunchMeasures_button_settings"
                android:visibility="visible" />

            <Button
                android:id="@+id/firstLaunchMeasures_buttonNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.3"
                android:clickable="false"
                android:onClick="onClick_buttonNext"
                android:text="@string/firstLaunchMeasures_button_next" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>