<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_slider_rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:tag="subquestion" >

    <TextView
        android:id="@+id/question_slider_mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAppearance="@style/ui_font_big_title_bold"
        android:textColor="@color/ui_white_text_color"/>

    <TextView
        android:id="@+id/question_slider_selectedSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/questionSlider_please_slide"
        android:textAppearance="@style/ui_font_bodytext_white" />
    
    <com.brainydroid.daydreaming.ui.AlphaSeekBar
        android:id="@+id/question_slider_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="6dip"
        android:maxHeight="6dip"
        android:paddingLeft="@dimen/seekbar_touchzone_radius"
        android:paddingRight="@dimen/seekbar_touchzone_radius"
        android:thumbOffset="0dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" >

        <TextView
            android:id="@+id/question_slider_leftHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textAppearance="@style/ui_font_bodytext_darkblue"/>

        <TextView
            android:id="@+id/question_slider_rightHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textAppearance="@style/ui_font_bodytext_darkblue" />
    </LinearLayout>

</LinearLayout>