<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <LinearLayout
            android:id = "@+id/firstLaunchProfile_spinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
            >

        <ImageView
                android:id="@+id/firstLaunchWelcome_ballon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ballon"/>

        <TextView
            android:id="@+id/firstLaunchProfile_titleAboutYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="@string/firstLaunchProfile_title_about_you"
            android:textAppearance="@style/ui_font_title" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp" >


            <TextView
                    android:id="@+id/firstLaunchProfile_textGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:text="@string/firstLaunchProfile_text_age"
                    android:textAppearance="@style/ui_font_bodytext"/>

            <Spinner
                    android:id="@+id/firstLaunchProfile_ageSpinner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/simple_spinner_box"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp" >

            <TextView
                android:id="@+id/firstLaunchProfile_textGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:text="@string/firstLaunchProfile_text_gender"
                android:textAppearance="@style/ui_font_bodytext"/>

            <Spinner
                android:id="@+id/firstLaunchProfile_genderSpinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/simple_spinner_box"
                />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

            <TextView
                    android:id="@+id/firstLaunchProfile_textEducation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:text="@string/firstLaunchProfile_text_education"
                    android:textAppearance="@style/ui_font_bodytext"/>

            <Spinner
                    android:id="@+id/firstLaunchProfile_educationSpinner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:singleLine = "true"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/simple_spinner_box"
                    />


        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLaunchProfile_spinners"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:gravity="right">


            <ImageButton
                    android:id="@+id/firstLaunchProfile_buttonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick_buttonNext"
                    android:text="@string/firstLaunchDescription_button_next"
                    android:background="@drawable/button_cloud_next"
                    />


    </LinearLayout>

</RelativeLayout>