    <!-- Text styles GISLAIN -->


    <style name="ui_font_title" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ui_dark_blue_color</item>
    </style>


    <style name="ui_font_title_white" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ui_white_text_color</item>
    </style>

    <style name="ui_font_title_white_bold" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ui_white_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ui_font_title_darkblue_bold" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ui_dark_blue_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ui_font_bodytext_white" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ui_white_text_color</item>
    </style>

    <style name="ui_font_bodytext_blue" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ui_blue_background_color</item>
    </style>

    <style name="ui_font_caption" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ui_dark_blue_color</item>
    </style>


    <style name="ui_font_button_dark" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/ui_dark_blue_color</item>
    </style>

    <style name="ui_font_button_white" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/ui_white_text_color</item>
    </style>



    <!-- Spinner -->

    <style name="spinnerStyle"  parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">5sp</item>
    </style>

