<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brainydroid.daydreaming"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver
            android:name=".Booter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".DashboardActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FirstLaunchWelcomeActivity"
            android:label="@string/firstLaunchWelcome_title_activity" >
        </activity>
        <activity
            android:name=".ReLaunchWelcomeActivity"
            android:label="@string/reLaunchWelcome_title_activity" >
        </activity>
        <activity
            android:name=".FirstLaunchDescriptionActivity"
            android:label="@string/firstLaunchDescription_title_activity" >
        </activity>
        <activity
            android:name=".FirstLaunchProfileActivity"
            android:label="@string/firstLaunchProfile_title_activity" >
        </activity>
        <activity
            android:name=".FirstLaunchMeasuresActivity"
            android:label="@string/firstLaunchMeasures_title_activity" >
        </activity>
        <service
            android:name=".ExpService"
            android:exported="false" />
    </application>

</manifest>