<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_many_sliders_rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/global_inter_question_space"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/question_many_sliders_mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/ui_font_title_bold"
        android:textColor="@color/ui_white_text_color"
        android:text="XXXXXXXXX"/>

    <LinearLayout
        android:id="@+id/question_many_sliders_rowContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/question_many_sliders_addLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <AutoCompleteTextView
            android:id="@+id/question_many_sliders_autoCompleteTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/question_many_sliders_addItem"
            android:layout_alignBottom="@id/question_many_sliders_addItem"
            android:layout_margin="4dp"
            android:inputType="textCapSentences"
            android:completionThreshold="2" />

        <Button
            android:id="@id/question_many_sliders_addItem"
            android:text="@string/questionManySliders_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>