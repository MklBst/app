<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_matrix_choice_rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/question_auto_list_mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/ui_font_big_title_bold"
        android:textColor="@color/ui_white_text_color"/>

    <LinearLayout
        android:id="@+id/question_auto_list_selectionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/question_auto_list_autoCompleteTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/question_auto_list_addButton"
            android:layout_alignBottom="@id/question_auto_list_addButton"
            android:layout_margin="4dp"
            android:inputType="textCapSentences"
            android:completionThreshold="2"
            android:textColorHint="@color/ui_light_gray_text_color"/>

        <com.brainydroid.daydreaming.ui.AlphaButton
            android:id="@id/question_auto_list_addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAppearance="@style/ui_font_button"
            android:textColor="@color/ui_dark_blue_color"
            android:text="@string/questionAutoList_add_item"
            android:paddingBottom="@dimen/block_button_vertical_padding"
            android:paddingTop="@dimen/block_button_vertical_padding"
            android:gravity="center"
            android:background="@drawable/white_rectangle_selector"
            />
    </RelativeLayout>

</LinearLayout>
