<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_many_sliders_slider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/question_many_sliders_slider_mainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/question_many_sliders_sliderDelete"
            android:textAppearance="@style/ui_font_big_title_bold"
            android:textColor="@color/ui_white_text_color"/>

        <ImageButton
            android:id="@id/question_many_sliders_sliderDelete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:background="@drawable/status_wrong"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:visibility="gone"
            android:contentDescription="@string/questionManySliders_delete_item"/>
        
    </RelativeLayout>

    <TextView
        android:id="@+id/question_many_sliders_slider_selectedSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/questionSlider_please_slide"
        android:textAppearance="@style/ui_font_bodyText"
        android:textColor="@color/ui_white_text_color"/>
    
    <com.brainydroid.daydreaming.ui.AlphaSeekBar
        android:id="@+id/question_many_sliders_slider_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="6dip"
        android:maxHeight="6dip"
        android:paddingLeft="@dimen/seekBar_touchZone_radius"
        android:paddingRight="@dimen/seekBar_touchZone_radius"
        android:thumbOffset="0dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" >

        <TextView
            android:id="@+id/question_many_sliders_slider_leftHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textAppearance="@style/ui_font_bodyText"
            android:textColor="@color/ui_dark_blue_color"/>

        <TextView
            android:id="@+id/question_many_sliders_slider_rightHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textAppearance="@style/ui_font_bodyText"
            android:textColor="@color/ui_dark_blue_color"/>

    </LinearLayout>

</LinearLayout>