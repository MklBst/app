<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#b20800bc</item>
        <item name="sv_showcaseColor">#ffffffff</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textAppearance">@style/ui_font_title_bold</item>
    </style>

    <style name="CustomDetail">
        <item name="android:textAppearance">@style/ui_font_bodyText</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>